            <!--
                                <DataTrigger Binding="{Binding ScanConnectionStatus}" Value="已断开">
                                    <Setter Property="Foreground" Value="Red"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>-->

        </StackPanel>
    </Grid>
</UserControl>
